    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Pavadinimas
        </dt>
        <dd class="col-sm-10">
            @Model.Filmas.Pavadinimas
        </dd>
        <dt class="col-sm-2">
            Išleidimo metai
        </dt>
        <dd class="col-sm-10">
            @Model.Filmas.IsleidimoData
        </dd>
        @*<dt class="col-sm-2">
            Enum_Žanras
        </dt>
        <dd class="col-sm-10">
            @Model.Filmas.Zanras
        </dd>*@
        <dt class="col-sm-2">
            Žanras
        </dt>
        <dd class="col-sm-10">
            @Model.ZanraiPavadinimas
        </dd>
        @*<dt class="col-sm-2">
            Aktoriai
        </dt>
        <dd class="col-sm-10">
            @Model.Filmas.Aktoriai
        </dd>*@
        <dt class="col-sm-2">
            Aktoriai
        </dt>
        <dd class="col-sm-10">
            @Model.DB_Aktoriai
        </dd>
    </dl>
</div>
<form asp-controller="home" asp-action="delete">
    <input type="submit" value="Ištrinti" /> |
    <a asp-controller="home" asp-action="filmusarasas">Atšaukti ir grįžti į filmų sąršą</a>
 </form>
