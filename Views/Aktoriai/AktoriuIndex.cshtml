@model Microsoft.EntityFrameworkCore.Internal.InternalDbSet<FilmaiDB.Models.Aktorius>

@{
    ViewBag.Title = "Aktoriai";
}

<h1>Aktorių sąrašas</h1>

<div class="form-group row">
    <div class="col-sm-10">
        <a asp-controller="aktoriai" asp-action="create">Sukurti naują įrašą</a>
    </div>
</div>

@if (Model.Count() != 0)
{
<table class="table">
    <thead>
        <tr>
            @*<th>
                Nr.
            </th>*@
            <th>
                Aktorius
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var aktorius in Model)
        {
        <tr>
            @*<td>
                @aktorius.Id
            </td>*@
            <td>
                @aktorius.VardasPavarde
            </td>
            <td align="right">
                <a asp-controller="aktoriai" asp-action="details" asp-route-id="@aktorius.Id">Išsamiau</a> |
                <a asp-controller="aktoriai" asp-action="edit" asp-route-id="@aktorius.Id">Redaguoti</a> |
                <a asp-controller="aktoriai" asp-action="delete" asp-route-id="@aktorius.Id">Ištrinti</a>
            </td>
        </tr>
        }
    </tbody>
</table>
    <hr style="margin-top:-15px"/>
}
else
{
    <h2>Aktorių sąrašas tuščias</h2>
}
