@model AktoriusRedagavimasViewModel

@{
    ViewBag.Title = "Redaguoti pasirinktą įrašą";
}



    <form asp-controller="aktoriai" asp-action="edit" method="post" class="mt-3">
        <input hidden asp-for="Id" />
        <div class="form-group row">
            <label asp-for="VardasPavarde" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="VardasPavarde" class="form-control" placeholder="Vardas Pavardė" />
                <span asp-validation-for="VardasPavarde" class="text-danger"></span>
            </div>
        </div>
        
        @*<div asp-validation-summary="All" class="text-danger"></div>*@

        <div class="form-group row">
            <div class="col-sm-10">
                <input type="submit" value="Patvirtinti pakeitimus" /> |
                <a asp-controller="aktoriai" asp-action="aktoriuindex">Atšaukti</a>
            </div>
        </div>


    </form>
