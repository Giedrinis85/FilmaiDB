@model ZanruSukurimasViewModel

@{
    ViewBag.Title = "Sukurti naują įrašą";
}



<form asp-controller="zanrai" asp-action="create" method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Pavadinimas" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Pavadinimas" class="form-control" placeholder="Pavadinimas" />
            <span asp-validation-for="Pavadinimas" class="text-danger"></span>
        </div>
    </div>
    
    @*<div asp-validation-summary="All" class="text-danger"></div>*@

    <div class="form-group row">
        <div class="col-sm-10">
            <input type="submit" value="Sukurti" /> |
            <a asp-controller="zanrai" asp-action="zanruindex">Atšaukti</a>
        </div>
    </div>

</form>
