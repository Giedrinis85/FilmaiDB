@model ZanraiIstrynimasViewModel

@{
    ViewBag.Title = "Žanro ištrynimas";
}

<div>
    <h4>Ar tikrai norite ištrinti informaciją apie žanrą?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Pavadinimas
        </dt>
        <dd class="col-sm-10">
            @Model.Zanrai.Pavadinimas
        </dd>
    </dl>
</div>

<hr />

@*<h5>Dėmesio! Filmas, kuris turi ištrinamą žanrą</h5>*@

@if (Model.Filmai.Count() == 1)
{
    <h5>Dėmesio! Filmas, kuris turi ištrinamą žanrą. Išrynus žanrą, išsitrins ir visa informacija apie filmą</h5>
}
@if (Model.Filmai.Count() > 1)
{
<h5>Dėmesio! Filmai, kurie turi ištrinamą žanrą. Ištrynus žanrą, išsitrins ir visa informacija apie filmą</h5>
}

    <table class="table">
        <thead>
            <tr>
                @*<th>
                    Nr.
                </th>*@
                <th>
                    Pavadinimas
                </th>
                <th>
                    Išleidimo metai
                </th>
                @*<th>
                        Enum_Žanras
                </th>*@
                <th>
                    Žanras
                </th>
                @*<th>
                        Aktoriai
                </th>*@
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var filmas in Model.Filmai)
            {
                <tr>
                    @*<td>
                        @filmas.Id
                    </td>*@
                    <td>
                        @filmas.Pavadinimas
                    </td>
                    <td>
                        @filmas.IsleidimoData
                    </td>
                    @*<td>
                            @filmas.Zanras
                    </td>*@
                    <td>
                        @filmas.Zanrai.Pavadinimas
                    </td>
                    @*<td>
                            @filmas.Aktoriai
                    </td>*@
                    <td align="right">
                        @*<a asp-controller="home" asp-action="details" asp-route-id="@filmas.Id">Išsamiau</a> |*@
                        <a asp-controller="home" asp-action="edit_zanraidelete" asp-route-id="@filmas.Id">Redaguoti</a> |
                        <a asp-controller="home" asp-action="delete" asp-route-id="@filmas.Id">Ištrinti</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <hr />

    <form asp-controller="zanrai" asp-action="delete" method="post">
        <input type="submit" value="Ištrinti žanrą" /> |
        <a asp-controller="zanrai" asp-action="zanruindex">Atšaukti ir grįžti į žanrų sąršą</a>
    </form>
