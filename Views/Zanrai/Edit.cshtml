@model ZanraiRedagavimasViewModel

@{
    ViewBag.Title = "Redaguoti pasirinktą įrašą";
}



<form asp-controller="zanrai" asp-action="edit" method="post" class="mt-3">
    <input hidden asp-for="Id" />
    <div class="form-group row">
        <label asp-for="Pavadinimas" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Pavadinimas" class="form-control" placeholder="Pavadinimas" />
            <span asp-validation-for="Pavadinimas" class="text-danger"></span>
        </div>
    </div>
           
    @*<div asp-validation-summary="All" class="text-danger"></div>*@

    <div class="form-group row">
        <div class="col-sm-10">
            <input type="submit" value="Patvirtinti pakeitimus" /> |
            <a asp-controller="zanrai" asp-action="zanruindex">Atšaukti</a>
        </div>
    </div>


</form>
